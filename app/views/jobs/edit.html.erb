<div class="admin_bar col-sm-2">
    <%= render "shared/admin_bar" %>
</div>

<div class="admin_content col-sm-10 admin_form">
    
    <div class="admin_header">
        <h1 class="center">Edit - <%= @job.label %>  </h1>
    </div>

    <div class="col-sm-6 col-sm-offset-3">
        <% if @job %>
            <%= form_for @job, url: {action: "update"}, class: "form-horizontal" do |f| %>

                <% if !@job.errors.full_messages.blank? %>
                    <h2 class="alert">
                        <% @job.errors.full_messages.each do |error| %>
                            <span><%= error %></span>
                        <% end %>
                    </h2>
                <% end %>
                
                <div class="form-group">
                    <div class="form_content">
                        <label for="job_label" class="col-sm-2 control-label">Label</label>
                        <div class="col-sm-10">
                              <%= f.text_field :label, autofocus: true , :class => "form-control", :id => "job_label"%>
                        </div>
                    </div>
                </div>

                <div class="stop"></div>

                <div class="form-group">
                    <div class="form_content">
                        <label for="job_slug" class="col-sm-2 control-label">Slug</label>
                        <div class="col-sm-10">
                              <%= f.text_field :slug, autofocus: true , :class => "form-control", :id => "job_slug"%>
                        </div>
                    </div>
                </div>
   
                <%= f.hidden_field :id %>
                <div class="stop"></div>
                

                <div class="actions">
                    <%= f.submit "update" , class: "btn btn-default" %>
                </div>
                
            <% end %>

        <% else %>
                <%= @message %>
        <% end %>

        
    </div>  

    

</div>

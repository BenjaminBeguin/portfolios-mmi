<div class="admin_bar col-sm-2">
	<%= render "shared/admin_bar" %>
</div>

<div class="admin_content col-sm-10">
	<div class="admin_header">
		<h1 class="center">Ville - <%= @villes.count %>  </h1>
		
		<%= button_to villes_new_path, method: :get , class: "btn btn-success" do %>
			Ajouter une ville
		<% end %>

	</div>

	<table class="table table-striped admin_table">
		<thead>
			<tr>
				<th>id</th>
				<th>Label</th>
				<th>Slug</th>
				<th>Edit</th>
			</tr>
		</thead>

		<% @villes.each do |ville| %>
			<tr>
				<td><%= ville.id %></td>
				<td><%= ville.label %></td>
				<td><%= ville.slug %></td>
				<td>
					<%= link_to villes_edit_path(id: ville.id ), method: :get do %>
						edit
					<% end %>
				</td>
			</tr>

		<% end %>

	</table>
</div>
	
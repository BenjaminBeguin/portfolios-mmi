
<% if @portfolio %>
    <%= form_for @portfolio, url: {action: "update", controller: "portfolios"} do |f| %>
     	

     	 <% if !@portfolio.errors.full_messages.blank? %>
	        <h2 class="alert">
	            <% @portfolio.errors.full_messages.each do |error| %>
	                <span><%= error %></span>
	            <% end %>
	        </h2>
	    <% end %>


        <div class="fields_wrapper">
            <div class="field">
                <%= f.label :url %>
                <%= f.text_field :url, autofocus: true , :class => "form_input", :id => "newpost_form_title"%>
            </div>
        </div>

         <%= f.hidden_field :id %>

        <div class="actions">
            <%= f.submit "Create" %>
        </div>
        
    <% end %>

<% else %>
        <%= @message %>
<% end %>

<%= @users.total_count %> posts <br><br>
<% @users.each do |user| %>
	<div>
		<li>
			<%= link_to show_portfolio_path(slug: user.portfolio.user.slug ), class:"post-author", method: :get do %>
				Detail du profils
			<% end %>
		</li>



		<li><%= user.portfolio.user.id %></li>
		<li><%= user.portfolio.user.firstname %></li>
		<li><%= user.portfolio.user.lastname %></li>
		<li><%= user.portfolio.user.fullname %></li>
		<li><%= user.portfolio.user.email %></li>
		<li>have pf = <%= user.portfolio.user.have_pf %></li>
		<li>admin : <%= user.portfolio.user.admin %></li>
		<li>count : <%= user.portfolio.count %></li>

		<%= render "shared/like",  :portfolio => user.portfolio %>



		<li>
			<%= link_to show_category_path(category: user.portfolio.user.job.slug ), class:"post-author", method: :get do %>
				<%= user.portfolio.user.job.label %>
			<% end %>
		</li>



		<li><%= user.portfolio.user.visite %> visite</li>
		<li>
			<%= link_to show_city_path(ville:  user.portfolio.user.ville.slug ), class:"post-author", method: :get do %>
				<%= user.portfolio.user.ville.label %>
			<% end %>
		</li>
		<li></li>

		<li>
			<%= link_to user.portfolio.url, target: '_blank' , :class => "post-likes" do %>
				link
			<% end %>
		</li>
		<li><%= user.portfolio.url if user.portfolio %></li>
		<li> published : <%= user.portfolio.published if user.portfolio %></li>
		<li><%= user.portfolio.like if user.portfolio %> like</li>
		<li><%= user.portfolio.visite if user.portfolio %> visite</li>
	</div>

	<br><br>


<% end %>

<%= paginate @users %>